<UserControl x:Class="ModbusRTUScanner.View.Controls.ConsoleTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModbusRTUScanner.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="textBox"
                            HorizontalContentAlignment="Left" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch" 
                            TextWrapping="Wrap" 
                            VerticalScrollBarVisibility="Auto"                             
                            AcceptsReturn="True" 
                            IsReadOnly="False" 
                            Text="{Binding Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                 />
        <Button x:Name="clearButton" Content="X" 
                Click="ClearButton_Click" 
                Width="25" Height="25"
                FontFamily="Comics Sans MS"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,4,4,0"
                />
    </Grid>
</UserControl>
